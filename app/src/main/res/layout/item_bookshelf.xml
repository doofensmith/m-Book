<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/item_bookshelf_container"
    android:paddingVertical="12dp">

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/purple_500">

        <ImageView
            android:id="@+id/item_bookshelf_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_logo"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"
            app:tint="@color/white"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/item_bookshelf_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Novel"
            android:textSize="16sp"
            android:textColor="@color/purple_500"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_bookshelf_count"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah buku : 20"
            android:textColor="@color/black"
            android:textSize="14sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/item_bookshelf_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_expand_more_24"
        app:tint="@color/purple_500"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"/>

</LinearLayout>